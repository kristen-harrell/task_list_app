<h2>Create a new Task</h2>

<form asp-controller="DunderMifflin" asp-action="Create" method="post">
    <label>Name:</label>
    <input type="text" name="Name" /><br>
    <label>Description:</label>
    <input type="text" name="Description" /><br>
    <label>Date:</label>
    <input type="date" name="DueDate" /><br>
    <input type="submit" />
    <input hidden type="text" name="Email" value="@User.Identity.Name" /><br>
    <input hidden type="text" name="Completed" value="false" /><br>
    <br>
</form>