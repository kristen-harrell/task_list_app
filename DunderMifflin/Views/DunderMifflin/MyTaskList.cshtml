
@{
    ViewData["Title"] = "MyTaskList";
}
@model List<ToDo>
<h1>My Task List</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Status</th>

    </tr>

@foreach (ToDo t in Model)
{
<tr>
    <td>@t.Name</td>
    <td>@t.Description</td>
    <td>@t.DueDate.ToShortDateString()</td>
    @if (t.Completed)
    {
        <td>Completed</td>
}
    else
    {
        <td>Incomplete</td>
}
    <td hidden>@t.Id</td>
    <td><a asp-action="Update" asp-controller="DunderMifflin" asp-route-Id="@t.Id"><button>Update</button></a></td>
    <td><a asp-action="Delete" asp-controller="DunderMifflin" asp-route-Id="@t.Id"><button>Delete</button></a></td>

</tr>
}
</table>

